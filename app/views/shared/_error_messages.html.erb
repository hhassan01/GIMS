<% if @user.errors.any? %>
  <div class="error_explanation">
  	<div class="alert alert-danger">
  	  	This form has <%= pluralize(@user.errors.count, "errors") %>
  	</div>
  	<ul>
  	  <% @user.errors.full_messages.each do |msg| %>
  	    <li><%= msg %></li>
  	  <% end %>
    </ul>
  </div>
<% end %>